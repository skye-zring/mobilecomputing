<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- label for question  -->
        <TextView
            android:id="@+id/result_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textStyle="bold"
            android:textSize="24sp" />

        <!-- label for the provided answer  -->
        <TextView
            android:id="@+id/provided_answer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_question"
            android:layout_marginTop="10dp"
            android:text="Provided Answer:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- provided answer  -->
        <TextView
            android:id="@+id/provided_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/provided_answer_label"
            android:textSize="16sp" />

        <!-- label for the correct answer  -->
        <TextView
            android:id="@+id/correct_answer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/provided_answer"
            android:text="Correct Answer:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- correct answer -->
        <TextView
            android:id="@+id/correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/correct_answer_label"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
